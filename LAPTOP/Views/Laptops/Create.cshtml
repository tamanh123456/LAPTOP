@model LAPTOP.Models.Laptop
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Laptops"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Id)
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Id)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CPU)
        @Html.TextBoxFor(m => m.CPU, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CPU)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Ram)
        @Html.TextBoxFor(m => m.Ram, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Ram)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Image_laptop)
       <input type="file" name="Image_laptop" />
        @Html.ValidationMessageFor(m => m.Image_laptop)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CategoryId)
        @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categories, "Id", "Brand"), "", new { @class = "form-control" })

    </div>
    <button type="submit" value="Save" class="btn btn-primary">Save</button>
}

